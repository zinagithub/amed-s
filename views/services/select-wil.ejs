<%- include('../partials/header'); -%>
<%- include('../partials/navbar'); -%>

<div class="container">
<div class="row ">
    <div class="col-md-9 offset-md-2">
        <h1 class = "display-4">Selectionnez une Wilaya : </h1>
        <hr>
        <%- include('../partials/flashMessages'); -%>
        <form action="/services/create" method="post"> 
            
                
                <div class="form-row">
                    <% wilayas.forEach(wil => { %>
                    <div class="col-md-2 form-check m-3">
                        <% if (wil.nomwilaya == "Alger") { %>
                            <input class="form-check-input" type="radio" name="wilaya" id="wilaya" value=<%= wil._id%>+<%= wil.nomwilaya %> checked>
                            <% } else {%>
                            <input class="form-check-input" type="radio" name="wilaya" id="wilaya" value=<%= wil._id%>+<%= wil.nomwilaya %>>    
                            <% } %>
                        <label class="form-check-label" for="wilaya">
                            <%= wil.nomwilaya %>
                        </label>
                    </div>
                    <% });%>
                </div>    
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Suivant..</button>
            </div>
            
        </form>
    </div>
</div>
</div>  
<%- include('../partials/footer'); -%>